{
  "services": {
    "load-tests": {
      "build": {
        "context": "../",
        "dockerfile": "dockerfiles/load-tests.Dockerfile"
      },
      "environment": {
        "TARGET_ADDRESS": "http://todo-server:8888"
      },
      "links": [
        "todo-server"
      ]
    },
    "todo-server": {
      "build": {
        "context": "../",
        "dockerfile": "dockerfiles/integration-server.Dockerfile"
      },
      "environment": {
        "CONFIGURATION_FILEPATH": "config_files/integration-tests-sqlite.toml",
        "DOCKER": "true"
      },
      "ports": [
        "80:8888"
      ]
    }
  },
  "version": "3.3"
}
